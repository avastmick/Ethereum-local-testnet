# Cmds to set up set of users on Mac OSX, so a VM is not required.
# sudo dscl . -append /Groups/admin GroupMembership testnet-01 # Adds to administrators group -unused

# First up - testnet - create extra per node req'd
sudo dscl . -create /Users/testnet
sudo dscl . -create /Users/testnet UserShell /bin/bash
sudo dscl . -create /Users/testnet Realname "Test Net"
sudo dscl . -create /Users/testnet UniqueID 510
sudo dscl . -create /Users/testnet PrimaryGroupID 1000
sudo dscl . -create /Users/testnet NFSHomeDirectory /Local/Users/testnet
sudo dscl . -passwd /Users/testnet password

# Next eth user - to be able to run eth, cpp-ethereum, node
sudo dscl . -create /Users/eth
sudo dscl . -create /Users/eth UserShell /bin/bash
sudo dscl . -create /Users/eth Realname "cpp-ethereum"
sudo dscl . -create /Users/eth UniqueID 503
sudo dscl . -create /Users/eth PrimaryGroupID 1000
sudo dscl . -create /Users/eth NFSHomeDirectory /Local/Users/eth
sudo dscl . -passwd /Users/eth password

# Finally, an ethcore user - to run parity nodes
sudo dscl . -create /Users/ethcore &&
sudo dscl . -create /Users/ethcore UserShell /bin/bash &&
sudo dscl . -create /Users/ethcore Realname "ethcore" &&
sudo dscl . -create /Users/ethcore UniqueID 504 &&
sudo dscl . -create /Users/ethcore PrimaryGroupID 1000 &&
sudo dscl . -create /Users/ethcore NFSHomeDirectory /Local/Users/ethcore &&
sudo dscl . -passwd /Users/ethcore password
